# =============================================================================
# Security Checker Configuration
# Copy this file to .env and customize as needed
# =============================================================================

# Project name (for reports)
PROJECT_NAME=Security Check

# NVD API Key (for faster dependency-check database updates)
# Get your API key at: https://nvd.nist.gov/developers/request-an-api-key
# NVD_API_KEY=YOUR_API_KEY

# Report output directory name (relative to target project)
REPORT_OUTPUT_DIR=security-reports

# Severity filter for vulnerability reports
SEVERITY_FILTER=HIGH,CRITICAL

# Semgrep parallel jobs
SEMGREP_JOBS=4

# Skip unit tests during build (true/false)
SKIP_TESTS=true

# =============================================================================
# DAST Configuration (Optional - disabled by default)
# =============================================================================
ENABLE_DAST=false
